<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
	<td><%= post.title %></td>
        <td><%= link_to 'Show', show_blog_posts_path(post.blog.id, post.id) %></td>
        <td><%= link_to 'Edit', edit_blog_posts_path(post) %></td>
        <td><%= link_to 'Destroy', destroy_blog_posts_path(post.blog.id, post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_blog_posts_path %>
