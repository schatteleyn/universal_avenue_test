<!DOCTYPE html>
<html>
<head>
  <title>UniversalAvenueTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'bootstrap', media: 'all'%>
  <%= stylesheet_link_tag    'bootstrap-responsive', media: 'all'%>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'bootstrap' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="#">Blogmaker</a>
    <ul class="nav">
      <li class="active"><a href="#">Home</a></li>
      <% if blog_signed_in? %>
	<li><%= link_to "Sign out", destroy_blog_session_path, :method => :delete %></li>
      <% else %>
	<li><%= link_to "Sign in", new_blog_session_path %></li>
	<li><%= link_to "Sign up", new_blog_registration_path %></li>
      <% end %>
    </ul>
  </div>
</div>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
